<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/cont_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/fab_icon_size">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/producto"
            android:layout_marginTop="30dp"
            android:id="@+id/edt_producto"
            android:textSize="20dp"
            android:inputType="textAutoComplete"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/precio"
            android:layout_marginTop="30dp"
            android:id="@+id/edt_precio"
            android:textSize="20dp"
            android:inputType="numberDecimal"
            android:gravity="right"
            android:layout_gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:padding="20dp"
        android:layout_below="@+id/cont_data"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/btnAceptar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_done"
            android:background="@drawable/boton_circulo"
            android:layout_margin="15dp"
            android:elevation="10dp"/>

        <ImageButton
            android:id="@+id/btnCancelar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="@string/cancelar"
            android:src="@drawable/ic_clear"
            android:background="@drawable/boton_circulo"
            android:layout_margin="15dp"
            android:elevation="10dp"/>

    </LinearLayout>


</RelativeLayout>