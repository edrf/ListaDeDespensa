<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coor_encabezadoalta"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EncabezadoAltaActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toobar_cabecera"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Nueva Lista"
            style="@style/SegundaActividad"/>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_alta_encabezado"/>

</android.support.design.widget.CoordinatorLayout>